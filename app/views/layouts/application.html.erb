<!DOCTYPE html>
<html lang="en">

  <head>
    <title>GRIMM</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="refresh" content="30" >
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


<nav class="navbar" >
  <div class="navbar-brand">
    <a class="navbar-item" href="/"><%= Settings.title.name %> </a>

    <a class="navbar-burger burger" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item" href="/">
        Home
      </a>

      <a class="navbar-item" href="/" >
        Documentation
      </a>
    </div>
  </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if current_user  %>
             <a class="navbar-item"> <%= current_user['info']['name'] %>  </a>
             <a class="button is-primary" href="/signout" role="button"> Sign Out </a>
          <% else %>
             <a class="button is-light" href="/signup" role="button"> Sign In</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

  <body>
  <section class="section">
    <div class="content">
      <%= yield %>
    </div>
  </section>
  </body>
</html>
